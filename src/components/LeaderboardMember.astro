interface Props {
  member: MemberWithId;
}

const { member } = Astro.props;

import { getDollarsPerDev, fmtCurrency } from '../members.ts';
import type { MemberWithId } from "../content/config.ts";
---

<tr>
  <td>
    <a class="sneaky" href={`/members/${member.id}`}>
      <img src={member.data.urlSquareLogoWithBackground} alt={`The ${member.data.name} logo`}>
      {member.data.name}
    </a>
  </td>
  <td>
    {member.data.annualReports[0].averageNumberOfDevs}
  </td>
  <td>
    {fmtCurrency(getDollarsPerDev(member.data.annualReports[0]))}
  </td>
</tr>

<style>
  img {
    max-width: 3.5rem;
    margin-right: 1rem;
  }
  a {
    display: flex;
    align-items: center;
    font-weight: bold;
    padding: 0.25rem 0
  }
</style>
